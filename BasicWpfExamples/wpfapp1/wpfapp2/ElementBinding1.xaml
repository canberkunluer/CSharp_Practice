<Window x:Class="wpfapp2.ElementBinding1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfapp2"
        mc:Ignorable="d"
        Title="ElementBinding1" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox FontSize="{Binding ElementName=slider1,Path=Value}" Text="Canberk"></TextBox>
            <TextBlock Text="{Binding ElementName=slider1,Path=Value}" Height="40" FontSize="14"></TextBlock>
            <Slider x:Name="slider1" Height="40" Width="200"
                    Maximum="100" SmallChange="20" Value="20"/>

        </StackPanel>
        
    </Grid>
</Window>
