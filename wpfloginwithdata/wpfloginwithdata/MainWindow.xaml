        <Button Content="Sign Up" Style="{StaticResource AccentButtonStyle}" Width="142" Name="btnsignup" Background="#FFFF0025" Margin="608,-219,0,0" VerticalAlignment="Top" Height="32" RenderTransformOrigin="0.51,0.108" />
        <Image Margin="307,-362,320,904" Source="/5087579.png" Stretch="Fill"/>


    </ui:SimpleStackPanel>
