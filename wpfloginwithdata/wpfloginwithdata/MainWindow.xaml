        <TextBox HorizontalAlignment="Left" Height="32" TextWrapping="Wrap"  Name="txtfisrtname" VerticalAlignment="Top" Width="192" Margin="118,13,0,0"/>
        <TextBlock Text="Lastname" HorizontalAlignment="Left" FontSize="20" Margin="29,-17,0,13" Foreground="White"></TextBlock>
        <TextBox  Height="32" HorizontalAlignment="Left" TextWrapping="Wrap"  Name="txtlastname" VerticalAlignment="Top" Width="192" Margin="118,-67,0,0"/>
